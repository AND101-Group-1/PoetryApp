<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PoemDetailFragment">

    <!-- The ID "poemDetailTitle" matches "binding.poemDetailTitle" in your Kotlin code -->
    <TextView
        android:id="@+id/poemDetailTitle"
        android:textAlignment="center"
        android:textColor="@color/slate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        tools:text="Poem Title" />

    <!-- The ID "poemDetailAuthor" matches "binding.poemDetailAuthor" -->
    <TextView
        android:id="@+id/poemDetailAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/slate"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="italic"
        tools:text="by Author Name" />
        
    <Button
        android:id="@+id/addToFavoritesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite \u2661"
        android:layout_marginTop="8dp"/>


    <!-- This ScrollView allows the poem text to be scrollable if it's long -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <!-- The ID "poemDetailLines" matches "binding.poemDetailLines" -->
        <TextView
            android:id="@+id/poemDetailLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/slate"
            android:textAlignment="center"
            android:text=""
            android:textAppearance="?attr/textAppearanceBody1"
            android:lineSpacingExtra="4dp"
            tools:text="Line 1 of the poem...\nLine 2 of the poem...\nAnd so on..." />
    </ScrollView>

</LinearLayout>
